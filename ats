--[[
  ATS - Advanced Timing System
  by SoniEx2
--]]
local total = 0;
local slept = 0;
local function _round(_i)
  return math.ceil(_i * 20) / 20;
end
function wait(_sleep)
  if _sleep < 0 then return end
  total = total + _sleep;
  local _time = 0;
  while slept < total do
    _time = _time + 0.05;
    slept = slept + 0.05;
  end
  if (slept - total) >= 0.05 then
    _time = _time + 0.05;
    slept = slept + 0.05;
  end
  sleep(_round(_time));
end