--[[
  ATS - Advanced Timing System
  by SoniEx2
--]]
local total = 0;
local slept = 0;
local function _round(_i)
  return math.ceil(_i * 20) / 20;
end
function wait(_sleep)
  total = total + _sleep;
  slept = slept + _round(_sleep);
  if slept > total then
    _sleep = _sleep - 0.05;
  elseif slept < total then
    _sleep = _sleep + 0.05;
  else
    slept = slept - _round(_sleep);
  end
  slept = slept + _round(_sleep);
  sleep(_round(_sleep));
end